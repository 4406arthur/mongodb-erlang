%% ex: ts=4 sw=4 noexpandtab syntax=erlang

{erl_opts, [debug_info, fail_on_warning]}.
{edoc_opts, [{index_columns, 1}, {sort_functions, false}, {preprocess, true}]}.

{deps, [
	{bson, ".*", {git, "git://github.com/soundrop/bson-erlang", "HEAD"}},
	{uuid, ".*", {git, "https://github.com/afiskon/erlang-uuid-v4.git", {branch, "master"}}},
	{poolboy, ".*", {git, "https://github.com/devinus/poolboy.git", {branch, "master"}}}
]}.

{clean_files, [
	"erl_crash.dump",
	"doc/*.html",
	"doc/erlang.png",
	"doc/edoc-info",
	"doc/stylesheet.css"
]}.
